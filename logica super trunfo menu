
#include <stdio.h>
#include <string.h>

// Estrutura de dados para armazenar as informaÃ§Ãµes de cada carta
typedef struct {
    char nome[50];
    int populacao;
    float area;
    float pib;
    int pontos_turisticos;
    float densidade_demografica; // populacao / area
} Carta;

// FunÃ§Ã£o para exibir uma carta na tela
void exibirCarta(Carta c) {
    printf("\n=== Carta: %s ===\n", c.nome);
    printf("PopulaÃ§Ã£o: %d habitantes\n", c.populacao);
    printf("Ãrea: %.2f kmÂ²\n", c.area);
    printf("PIB: %.2f bilhÃµes de dÃ³lares\n", c.pib);
    printf("Pontos turÃ­sticos: %d\n", c.pontos_turisticos);
    printf("Densidade demogrÃ¡fica: %.2f hab/kmÂ²\n", c.densidade_demografica);
}

int main() {
    // Cadastro fixo das cartas (reaproveitado de desafios anteriores)
    Carta carta1 = {"Brasil", 214000000, 8516000.00, 2490.00, 30, 0};
    Carta carta2 = {"Argentina", 46000000, 2780000.00, 640.00, 25, 0};

    // Calcula a densidade demogrÃ¡fica (populaÃ§Ã£o / Ã¡rea)
    carta1.densidade_demografica = carta1.populacao / carta1.area;
    carta2.densidade_demografica = carta2.populacao / carta2.area;

    int opcao;

    printf("=====================================\n");
    printf("     SUPER TRUNFO - NÃVEL AVENTUREIRO ğŸŒ\n");
    printf("=====================================\n");

    printf("\nCartas cadastradas:\n");
    exibirCarta(carta1);
    exibirCarta(carta2);

    // Exibe o menu interativo
    printf("\nEscolha o atributo para comparar:\n");
    printf("1 - PopulaÃ§Ã£o\n");
    printf("2 - Ãrea\n");
    printf("3 - PIB\n");
    printf("4 - NÃºmero de pontos turÃ­sticos\n");
    printf("5 - Densidade demogrÃ¡fica\n");
    printf("Escolha uma opÃ§Ã£o: ");
    scanf("%d", &opcao);

    printf("\n=====================================\n");

    // Estrutura switch para o menu
    switch (opcao) {
        case 1: // PopulaÃ§Ã£o
            printf("Comparando PopulaÃ§Ã£o:\n");
            printf("%s: %d habitantes\n", carta1.nome, carta1.populacao);
            printf("%s: %d habitantes\n", carta2.nome, carta2.populacao);

            if (carta1.populacao > carta2.populacao) {
                printf("\nVencedor: %s ğŸ†\n", carta1.nome);
            } else if (carta2.populacao > carta1.populacao) {
                printf("\nVencedor: %s ğŸ†\n", carta2.nome);
            } else {
                printf("\nEmpate!\n");
            }
            break;

        case 2: // Ãrea
            printf("Comparando Ãrea:\n");
            printf("%s: %.2f kmÂ²\n", carta1.nome, carta1.area);
            printf("%s: %.2f kmÂ²\n", carta2.nome, carta2.area);

            if (carta1.area > carta2.area) {
                printf("\nVencedor: %s ğŸ†\n", carta1.nome);
            } else if (carta2.area > carta1.area) {
                printf("\nVencedor: %s ğŸ†\n", carta2.nome);
            } else {
                printf("\nEmpate!\n");
            }
            break;

        case 3: // PIB
            printf("Comparando PIB:\n");
            printf("%s: %.2f bilhÃµes de dÃ³lares\n", carta1.nome, carta1.pib);
            printf("%s: %.2f bilhÃµes de dÃ³lares\n", carta2.nome, carta2.pib);

            if (carta1.pib > carta2.pib) {
                printf("\nVencedor: %s ğŸ†\n", carta1.nome);
            } else if (carta2.pib > carta1.pib) {
                printf("\nVencedor: %s ğŸ†\n", carta2.nome);
            } else {
                printf("\nEmpate!\n");
            }
            break;

        case 4: // Pontos turÃ­sticos
            printf("Comparando Pontos TurÃ­sticos:\n");
            printf("%s: %d pontos\n", carta1.nome, carta1.pontos_turisticos);
            printf("%s: %d pontos\n", carta2.nome, carta2.pontos_turisticos);

            if (carta1.pontos_turisticos > carta2.pontos_turisticos) {
                printf("\nVencedor: %s ğŸ†\n", carta1.nome);
            } else if (carta2.pontos_turisticos > carta1.pontos_turisticos) {
                printf("\nVencedor: %s ğŸ†\n", carta2.nome);
            } else {
                printf("\nEmpate!\n");
            }
            break;

        case 5: // Densidade demogrÃ¡fica (menor vence)
            printf("Comparando Densidade DemogrÃ¡fica:\n");
            printf("%s: %.2f hab/kmÂ²\n", carta1.nome, carta1.densidade_demografica);
            printf("%s: %.2f hab/kmÂ²\n", carta2.nome, carta2.densidade_demografica);

            // Regras especÃ­ficas (aninhadas)
            if (carta1.densidade_demografica < carta2.densidade_demografica) {
                printf("\nVencedor: %s ğŸ† (menor densidade demogrÃ¡fica)\n", carta1.nome);
            } else if (carta2.densidade_demografica < carta1.densidade_demografica) {
                printf("\nVencedor: %s ğŸ† (menor densidade demogrÃ¡fica)\n", carta2.nome);
            } else {
                printf("\nEmpate!\n");
            }
            break;

        default:
            printf("OpÃ§Ã£o invÃ¡lida! Escolha um nÃºmero entre 1 e 5.\n");
            break;
    }

    printf("=====================================\n");
    printf("Fim da partida!\n");

